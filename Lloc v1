import java.util.List;
import java.util.TimeZone;

public class Lloc {
    
    public final String nom;
    private final double latitud;
    private final double longitud;
    private final TimeZone franjaHoraria;
    private List<MitjaTransport> llistaTransports;
    private List<Secundari> llistaSecundaris;
    
    public Lloc(String _nom,double _latitud,double _longitud,TimeZone _franjaHoraria ){
        nom=_nom;
        latitud=_latitud;
        longitud=_longitud; 
        franjaHoraria=_franjaHoraria;
    }
    
    public List<MitjaTransport> obtenirTransports(){
        return llistaTransports;
    }
    
    public void afegirMitjaTransport(MitjaTransport transport){
        llistaTransports.add(transport);
    }

    public void afegirSecundari(Secundari lloc_secundari){
        llistaSecundaris.add(lloc_secundari);
    }
    
}
